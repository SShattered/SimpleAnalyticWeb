@if (MessageVisible)
{
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Message</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@ModalMessage</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool MessageVisible { get; set; }
    [Parameter] public EventCallback<bool> MessageVisibleChanged { get; set; }
    [Parameter] public string ModalMessage { get; set; } = string.Empty;

    private async Task Close()
    {
        await MessageVisibleChanged.InvokeAsync(false);
    }
}
